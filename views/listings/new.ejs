<% layout("/layouts/boilerplate")%>

<body>
    <h2>Create New Listing</h2>
     <form action="/listings" method="POST">
        <input type="text" name="listing[title]" placeholder="enter title" required><br>
        <textarea name="listing[description]" placeholder="enter description" required></textarea><br>
        <input type="text" name="listing[image]" placeholder="enter image URL/Link"><br>
        <input type="number" name="listing[price]" placeholder="enter price" required><br>
        <input type="text" name="listing[country]" placeholder="enter country" required><br>
        <input type="text" name="listing[location]" placeholder="enter location" required><br>
        <button type="submit">Add</button>
    </form>
</body>
